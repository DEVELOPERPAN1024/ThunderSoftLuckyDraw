<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar.FullScreen" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>

    <style name="AppTheme.CustomActionBar" parent="AppTheme">
        <item name="android:actionBarStyle">@style/NonSpaceActionBar</item>
        <item name="actionBarStyle">@style/NonSpaceActionBar</item>
    </style>

    <style name="NonSpaceActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:contentInsetStart">0dp</item>
        <item name="android:contentInsetEnd">0dp</item>
    </style>

    <style name="AddAwardEditText">
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:textSize">15sp</item>
        <item name="android:imeOptions">actionNext|flagNoExtractUi</item>
    </style>

</resources>
