<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lucky_draw_final"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="horizontal"
    android:padding="@dimen/one"
    tools:context="cn.thundersoft.codingnight.acitivity.LuckyDrawActivityFinal">

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/one"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/one"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="中奖信息" />

            <ScrollView
                android:id="@+id/award_name_sv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                >

                <TextView
                    android:id="@+id/award_name_list_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|bottom"
                    android:paddingBottom="@dimen/six"
                    android:textColor="@color/colorSubTitle"
                    android:textSize="10sp" />
            </ScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/one"
        android:layout_weight="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/one"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="抽奖滚动" />

            <TextView
                android:id="@+id/lucky_draw_final_text_random"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/colorSubTitle"
                android:textSize="@dimen/textSizeLarge" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/one"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/one"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="奖项信息" />

            <TextView
                android:id="@+id/lucky_draw_final_text_hint"
                android:layout_width="match_parent"
                android:padding="@dimen/one"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <FrameLayout
                android:id="@+id/fab_container"
                android:layout_width="@dimen/six"
                android:layout_height="@dimen/six"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/two"
                android:background="@drawable/fab_red"
                android:elevation="@dimen/half">

                <ImageView
                    android:id="@+id/lucky_draw_final_button"
                    android:padding="@dimen/one"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/fab_background"
                    android:scaleType="center"
                    android:src="@drawable/ic_start" />
            </FrameLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
