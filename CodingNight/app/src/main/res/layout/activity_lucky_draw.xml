<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_lucky_draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.thundersoft.codingnight.acitivity.LuckyDrawActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lucky_draw_top_left_linear"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/two"
                android:text="@string/lucky_draw_prize"
                android:textAlignment="textStart"
                android:textColor="@color/colorMainTitle"/>

            <Spinner
                android:id="@+id/lucky_draw_award_spinner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/four">

            </Spinner>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/two">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lucky_draw_select_count"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/lucky_draw_count_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/four"
                    android:paddingTop="@dimen/two">

                </Spinner>
            </LinearLayout>

            <Button
                android:id="@+id/lucky_draw_award_start_button"
                android:layout_width="match_parent"
                android:layout_height="160dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/lucky_draw_top_right_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/lucky_draw_award_image"
                android:layout_width="160dp"
                android:layout_height="160dp" />

            <TextView
                android:id="@+id/lucky_draw_award_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This is a test description of this prize" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:background="@color/cardview_dark_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>


</LinearLayout>
