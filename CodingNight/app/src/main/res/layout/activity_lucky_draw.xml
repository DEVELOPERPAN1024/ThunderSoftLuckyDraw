<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_lucky_draw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/two"
        android:layout_marginRight="@dimen/two"
        android:layout_marginTop="@dimen/two">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/one"
            android:minHeight="160dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lucky_draw_top_left_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/three"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="@dimen/two"
                    android:text="@string/lucky_draw_prize"
                    android:textColor="@color/colorMainTitle"
                    android:textSize="@dimen/textSizeLarge" />

                <Spinner
                    android:id="@+id/lucky_draw_award_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/four"
                    android:layout_marginBottom="@dimen/two" />

                <Spinner
                    android:id="@+id/lucky_draw_count_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/four"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/two"
                android:layout_toEndOf="@+id/lucky_draw_top_left_linear">

                <Button
                    android:id="@+id/lucky_draw_award_start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                    android:gravity="center"
                    android:text="@string/lucky_draw_button_start"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="@dimen/textSizeForDrawButton" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/two"
        android:layout_marginRight="@dimen/two"
        android:layout_marginTop="@dimen/two">

        <LinearLayout
            android:id="@+id/lucky_draw_award_bottom_linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/one"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/one"
                android:layout_marginTop="@dimen/one"
                android:text="@string/lucky_draw_prize_title"
                android:textColor="@color/colorMainTitle"
                android:textSize="@dimen/textSizeSuperLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/lucky_draw_award_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/one"
                    android:text="这里是奖品描述"
                    android:textColor="@color/colorSubTitle" />

                <ImageView
                    android:id="@+id/lucky_draw_award_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/one"
                    android:background="#EEE"
                    android:elevation="@dimen/half"
                    android:minHeight="160dp"
                    android:minWidth="160dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <ScrollView
        android:id="@+id/lucky_draw_scrollview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:visibility="invisible">

        <TextView
            android:id="@+id/lucky_draw_award_names"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="@color/colorSubTitle"
            android:textSize="@dimen/textSizeSuperLarge" />
    </ScrollView>
</LinearLayout>
