<?xml version="1.0" encoding="utf-8"?>
<cn.thundersoft.codingnight.ui.ClearableEditText xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/one"
    android:paddingRight="@dimen/one">

    <EditText
        android:id="@+id/et_search"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="@string/search_input_search_text"
        android:imeOptions="flagNoExtractUi"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:textColorHint="#ddd" />

    <ImageButton
        android:id="@+id/bt_clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/one"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_close" />
</cn.thundersoft.codingnight.ui.ClearableEditText>