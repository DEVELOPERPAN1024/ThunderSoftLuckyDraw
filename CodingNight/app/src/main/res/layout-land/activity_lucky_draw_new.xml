<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/scene_root_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/main_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/main_titile_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/ten"
                android:layout_marginTop="@dimen/two"
                android:text="ThunderSoft"
                android:textColor="@android:color/holo_red_light"
                android:textSize="25sp"
                android:textStyle="bold"
                android:transitionName="shareTitle" />

            <FrameLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/four"
                android:layout_marginLeft="@dimen/eight"
                android:layout_marginRight="@dimen/eight"
                android:layout_marginTop="@dimen/two" />
        </LinearLayout>

        <ListView
            android:id="@+id/prizes"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:background="#EEE"
            android:choiceMode="singleChoice"
            android:divider="@null"
            android:dividerHeight="0dp"
            android:scrollbars="vertical"
            tools:listitem="@layout/item_prize_indicator" />
    </android.support.v4.widget.DrawerLayout>

    <LinearLayout
        android:id="@+id/back_button_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:alpha="0"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出抽奖"
            android:textSize="20sp" />

        <FrameLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginBottom="@dimen/two"
            android:layout_marginLeft="@dimen/two"
            android:layout_marginRight="@dimen/two"
            android:layout_marginTop="@dimen/one"
            android:background="@drawable/fab_red">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@drawable/fab_background"
                android:padding="@dimen/two"
                android:src="@drawable/ic_arrow_left_white_24dp" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>