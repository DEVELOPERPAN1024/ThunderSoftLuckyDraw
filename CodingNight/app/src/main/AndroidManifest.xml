<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.thundersoft.codingnight">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".acitivity.NewMainActivity"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".acitivity.AwardActivity"
            android:screenOrientation="landscape"
            />
        <activity android:name=".acitivity.AddAwardActivity"
            android:screenOrientation="landscape"
            />

        <activity android:name=".acitivity.DataActivity" />
        <activity android:name=".acitivity.LuckyDrawActivity"
            android:screenOrientation="landscape"
            />
        <activity android:name=".acitivity.AwardDetailActivity"
            android:screenOrientation="landscape"
            />
        <activity android:name=".acitivity.SearchActivity"
            android:screenOrientation="landscape"
            />
        <activity
            android:name=".acitivity.LuckyDrawActivityNew"
            android:screenOrientation="landscape"
            android:theme="@style/AppTheme.NoActionBar.FullScreen" />
        <activity android:name=".acitivity.LuckyDrawActivityFinal"
            android:screenOrientation="landscape"
            android:hardwareAccelerated="true"
            android:theme="@style/AppTheme.NoActionBar.FullScreen"
            />

        <provider
            android:name=".db.AwardAndEmployeeInfoProvider"
            android:authorities="tscodingnight" />
    </application>

</manifest>